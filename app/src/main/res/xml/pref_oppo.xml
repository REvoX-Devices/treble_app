<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="ディスプレイ">
        <CheckBoxPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="false"
            android:key="key_oppo_double_tap_to_wake"
            android:title="ダブルタップで画面を起動" />
        <CheckBoxPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="false"
            android:key="key_oppo_ts_game_mode"
            android:title="ゲームモードを有効" />
    </PreferenceCategory>
    <PreferenceCategory android:title="その他">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="key_oppo_usb_otg"
            android:title="USB OTG を有効にする" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="key_oppo_dc_diming"
            android:title="DC 調光を有効にする" />
    </PreferenceCategory>
</PreferenceScreen>
